{
  "name": "project-holo",
  "version": "1.0.0",
  "main": "src/electron.js",
  "license": "MIT",
  "author": "dastasoft",
  "scripts": {
    "build": "yarn build:react",
    "build:css": "postcss app/src/styles/tailwind.css -o app/src/styles/app.css",
    "build:electron": "electron-builder build --linux",
    "build:react": "cross-env NODE_ENV=production yarn run build:css && parcel build app/public/index.html",
    "clean": "rimraf .cache dist build",
    "serve:electron": "wait-on http://localhost:1234 && electron .",
    "serve:react": "cross-env BROWSER=none yarn run watch:css && parcel serve -p 1234 app/public/index.html",
    "start": "concurrently yarn:serve:react yarn:serve:electron",
    "release": "yarn clean && yarn build && yarn build:electron",
    "watch:css": "postcss app/src/styles/tailwind.css -o app/src/styles/app.css"
  },
  "build": {
    "appId": "io.intocode.react-boilerplate",
    "productName": "ReactBoilerplate",
    "files": [
      "src/electron.js",
      "dist/**/*"
    ]
  },
  "dependencies": {
    "@tippyjs/react": "^4.0.5",
    "axios": "^0.19.2",
    "electron-debug": "^3.1.0",
    "electron-is-dev": "^1.2.0",
    "howler": "^2.1.3",
    "prop-types": "^15.7.2",
    "react": "^16.3.0",
    "react-confetti": "^5.0.1",
    "react-dom": "^16.8.0",
    "react-fireworks": "^1.0.4",
    "react-router-dom": "^5.1.2",
    "react-use": "^14.2.0",
    "socket.io-client": "^2.3.0",
    "styled-components": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "autoprefixer": "^9.8.4",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "electron": "^9.0.5",
    "electron-builder": "^22.7.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "parcel-bundler": "^1.12.4",
    "postcss-cli": "^7.1.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "tailwindcss": "^1.4.6",
    "wait-on": "^5.0.1"
  }
}
